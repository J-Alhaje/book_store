{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}
{% block body %}
    <h1>Products</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ product.name }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>{{ product.image }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ product.description }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ product.price }}</td>
        </tr>
        </tbody>
    </table>


    <a class="btn btn-primary" href="{{ path('app_products_edit', {'id': product.id}) }}">save</a>
    {{ include('Admin/products/_delete_form.html.twig') }}
    <a class="btn btn-success mt-3" href="{{ path('app_products_index') }}">back to list</a>

{% endblock %}
